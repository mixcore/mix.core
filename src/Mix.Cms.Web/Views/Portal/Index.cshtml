@{
    ViewData["Title"] = "Dashboard";
    ViewData["Description"] = "Your powerful dashboard is here";
    Layout = "~/Views/Shared/_LayoutPortal_Angular.cshtml";

    var menus = MixCmsHelper.LoadDataFile("data/consts", "portal-menus.json");
}

<div ng-show="isAuth" class="">

    <mix-loader ng-show="isBusy"></mix-loader>
    <header-nav ng-if="isInit" settings="settings" bread-crumbs="breadCrumbs"></header-nav>
    <login-popup></login-popup>
  
    <div class="wrapper d-flex">
        <main-side-bar ng-if="isAdmin" class="bd-sidebar main-sidebar"></main-side-bar>
        <main-side-bar-dynamic ng-if="!isAdmin" roles="roles" actived-role="roles[0]" class="bd-sidebar main-sidebar"></main-side-bar-dynamic>
        <!-- Page Content  -->
        <form class="col d-flex flex-row-reverse {{pageClass}}" ng-view ng-class="{'submitted': submitted}" ng-submit="save()">
        </form>
        <portal-theme-settings></portal-theme-settings>
        <medias ng-if="isInit"></medias>
        <hub-messages ng-if="isInit"></hub-messages>
        <message ng-if="isInit" message="message"></message>
        <confirm ng-if="isInit" message="confirmMessage"></confirm>
        <modal-permission ng-if="isInit"></modal-permission>
        <modal-bookmark ng-if="isInit"></modal-bookmark>
        <preview-popup ng-if="isInit" preview-object="previewObject"></preview-popup>
    </div>
    
    <input type="hidden" id="portal-menus" value="@menus.Content" />
</div>