@{
    var detailsUrl = (string)this.ViewData["DetailsUrl"];
}
@if (Model.TotalPage > 1)
{
<nav aria-label="Page navigation example">
    <ul class="pagination justify-content-center">
        @if (Model.PageIndex > 0)
        {
        <li class="page-item">
            <a class="page-link" href="@detailsUrl/?page=@(Model.Page - 1)" tabindex="-1" aria-disabled="true">Previous</a>
        </li>
        }
        @for (int i = 0; i < Model.TotalPage; i++)
        {
            string cl = i == Model.PageIndex ? "active" : string.Empty;
            <li class="page-item @cl"><a class="page-link" href="@detailsUrl/?page=@(i + 1)">@(i + 1)</a></li>
        }
        @if (Model.PageIndex < Model.TotalPage - 1)
        {
        <li class="page-item">
        <a class="page-link" href="@detailsUrl/?page=@(Model.Page + 1)">Next</a>
        </li>
        }
    </ul>
</nav>
}
