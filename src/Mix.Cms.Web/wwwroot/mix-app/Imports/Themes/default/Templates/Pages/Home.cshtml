<div id="simple-blog-app" class="container">
    <div class="row" id="post-list">
        <div class="col-lg-8 col-md-10 mx-auto">        
            @foreach(var post in posts.Data.Items){
                <div class="post-preview">
                    <a href="/post/@post.Id/@post.SeoTitle">
                    <h2 class="post-title">
                        @post.Title
                    </h2>
                    <h3 class="post-subtitle">
                        @post.Excerpt
                    </h3>
                    </a>
                    <p class="post-meta">Posted by
                    <a href="#">@post.CreatedBy</a>
                    on @post.CreatedDateTime.ToShortDateString()</p>
                </div>
            }
            <post-list page-size="20" page-index="1" total-page="@posts.Data.TotalPage"></post-list>
        </div>
    </div>
</div>
