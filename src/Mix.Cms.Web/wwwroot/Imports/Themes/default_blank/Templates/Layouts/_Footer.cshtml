@using Microsoft.AspNetCore.Authorization
@inject IAuthorizationService AuthorizationService

@{
    var cates = await Mix.Cms.Lib.MixCmsHelper.GetNavigation("footer", ViewBag.culture);
}
<footer class="footer footer-default ">
    <div class="container">
        <nav>
            <ul>
                @if(cates!=null){
                    foreach (var cate in cates)
                    {                    
                        <li>
                            <a href="@cate.Uri">
                                @cate.Title
                            </a>
                        </li>
                    }
                }
                @if (!User.Identity.IsAuthenticated)
                {
                    <li>
                        <a href="/admin">
                            Login
                        </a>
                    </li>
                }
                else
                {
                    <li>
                        <a href="/admin">
                            Portal
                        </a>
                    </li>
                }
            </ul>
        </nav>
    </div>
</footer>
